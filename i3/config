workspace 2 output eDP-1
workspace 3 output eDP-1
workspace 4 output DP-2
workspace 5 output DP-2
workspace 6 output DP-2

# Assign applications to workspaces
#  xprop | grep "CLASS"
assign [class="Firefox"] 1

